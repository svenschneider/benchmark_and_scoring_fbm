#		'theta': 1.23
#		}
#	
#	print "-> SENDING RESULT"
#	for field in result:
#		print "%s: %s" % (field, result[field])
#	
#	 # Convert result to YAML string
#	result_yaml = yaml.dump(result)
#	benchmark.SendResult(result_yaml)

